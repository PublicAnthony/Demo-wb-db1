{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "administratorLogin": {
            "type": "string",
            "defaultValue": "sqlAdmin",
            "metadata": {
                "description": "The account name to use for the database server administrator (high-privileged)."
            }
        },
        "administratorLoginPassword": {
            "type": "securestring",
            "metadata": {
                "description": "The password to use for the database server administrator."
            }
        },
        "applicationLogin": {
            "type": "string",
            "defaultValue": "appUser",
            "metadata": {
                "description": "The account name to use for the application's connections to the database server (low-privileged)."
            }
        },
        "applicationLoginPassword": {
            "type": "securestring",
            "metadata": {
                "description": "The password to use for the application's connections to the database server."
            }
        },
        "repoUrl": {
            "type": "string"
        },
        "branch": {
            "type": "string"
        }
    },
    "variables": {
        "defaultSqlServerName": "[concat('cm-sqlserver-', uniqueString(resourceGroup().id))]",
        "defaultStorageAccountName": "[concat('cm-storage-', uniqueString(resourceGroup().id))]",
        "defaultWebAppName": "[concat('cm-webapp-', uniqueString(resourceGroup().id))]",
        "defaultAppServicePlanName": "[concat('cm-appserviceplan-', uniqueString(resourceGroup().id))]",
        "defaultAppServicePlanSku": "Free",
        "defaultAppServicePlanWorkerSize": "0",
        "defaultWebAppLocation": "West US",
        "defaultSqlServerLocation": "West US",
        "defaultDatabaseName": "ContactManagerDb",
        "defaultDatabaseCollation": "SQL_Latin1_General_CP1_CI_AS",
        "defaultDatabaseEdition": "Basic",
        "defaultDatabaseSLO": "B",
        "defaultDatabaseMaxSizeBytes": "1073741824",
        "defaultStorageAccountType": "Standard_LRS"
    },
    "resources": [
        {
            "name": "[variables('defaultSqlServerName')]",
            "type": "Microsoft.Sql/servers",
            "location": "[variables('defaultSqlServerLocation')]",
            "apiVersion": "2014-04-01-preview",
            "properties": {
                "administratorLogin": "[parameters('administratorLogin')]",
                "administratorLoginPassword": "[parameters('administratorLoginPassword')]",
                "version": "12.0"
            },
            "resources": [
                {
                    "name": "[variables('defaultDatabaseName')]",
                    "type": "databases",
                    "location": "[variables('defaultSqlServerLocation')]",
                    "apiVersion": "2014-04-01-preview",
                    "dependsOn": [
                        "[concat('Microsoft.Sql/servers/', variables('defaultSqlServerName'))]"
                    ],
                    "properties": {
                        "edition": "[variables('defaultDatabaseEdition')]",
                        "collation": "[variables('defaultDatabaseCollation')]",
                        "maxSizeBytes": "[variables('defaultDatabaseMaxSizeBytes')]",
                        "requestedServiceObjectiveName": "[variables('defaultDatabaseSLO')]"
                    }
                },
                {
                    "apiVersion": "2014-04-01-preview",
                    "dependsOn": [
                        "[concat('Microsoft.Sql/servers/', variables('defaultSqlServerName'))]"
                    ],
                    "location": "[variables('defaultSqlServerLocation')]",
                    "name": "AllowAllAzureIps",
                    "properties": {
                        "endIpAddress": "0.0.0.0",
                        "startIpAddress": "0.0.0.0"
                    },
                    "type": "firewallrules"
                }
            ]
        },
        {
            "apiVersion": "2015-06-15",
            "name": "[variables('defaultStorageAccountName')]",
            "type": "Microsoft.Storage/storageAccounts",
            "location": "[resourceGroup().location]",
            "properties": {
                "accountType": "[variables('defaultStorageAccountType')]"
            }
        },
        {
            "apiVersion": "2014-06-01",
            "name": "[parameters('defaultAppServicePlanName')]",
            "type": "Microsoft.Web/serverfarms",
            "location": "[variables('defaultWebAppLocation')]",
            "properties": {
                "name": "[parameters('defaultAppServicePlanName')]",
                "sku": "[variables('defaultAppServicePlanSku')]",
                "workerSize": "[variables('defaultAppServicePlanWorkerSize')]",
                "numberOfWorkers": 1
            }
        },
        {
            "apiVersion": "2015-08-01",
            "name": "[variables('defaultWebAppName')]",
            "type": "Microsoft.Web/sites",
            "location": "[variables('defaultWebAppLocation')]",
            "dependsOn": [
                "[concat('Microsoft.Web/serverfarms/', parameters('defaultAppServicePlanName'))]"
            ],
            "tags": {
                "[concat('hidden-related:', resourceGroup().id, '/providers/Microsoft.Web/serverfarms/', parameters('defaultAppServicePlanName'))]": "empty"
            },
            "properties": {
                "name": "[variables('defaultWebAppName')]",
                "serverFarmId": "[parameters('defaultAppServicePlanName')]"
            },
            "resources": [
                {
                    "apiVersion": "2015-08-01",
                    "type": "config",
                    "name": "appsettings",
                    "dependsOn": [
                        "[concat('Microsoft.Web/sites/', variables('defaultWebAppName'))]"
                    ],
                    "properties": {
                        "administratorLogin": "[parameters('administratorLogin')]",
                        "administratorLoginPassword": "[parameters('administratorLoginPassword')]",
                        "applicationLogin": "[parameters('applicationLogin')]",
                        "applicationLoginPassword": "[parameters('applicationLoginPassword')]"
                    }
                },
                {
                    "apiVersion": "2015-08-01",
                    "type": "config",
                    "name": "connectionstrings",
                    "dependsOn": [
                        "[concat('Microsoft.Web/sites/', variables('defaultWebAppName'))]"
                    ],
                    "properties": {
                        "DefaultConnection": {
                            "value": "[concat('Data Source=tcp:', reference(concat('Microsoft.Sql/servers/', variables('defaultSqlServerName'))).fullyQualifiedDomainName, ',1433;Initial Catalog=', variables('defaultDatabaseName'), ';User Id=', parameters('applicationLogin'), '@', variables('defaultSqlServerName'), ';Password=', parameters('applicationLoginPassword'), ';')]",
                            "type": "SQLAzure"
                        }
                    }
                },
                {
                    "apiVersion": "2015-04-01",
                    "name": "web",
                    "type": "sourcecontrols",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/sites', variables('defaultWebAppName'))]",
                        "[concat('Microsoft.Web/sites/', variables('defaultWebAppName'), '/config/connectionstrings')]"
                    ],
                    "properties": {
                        "RepoUrl": "[parameters('repoUrl')]",
                        "branch": "[parameters('branch')]",
                        "IsManualIntegration": true
                    }
                }
            ]
        }
    ]
}
